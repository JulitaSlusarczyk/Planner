<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="110dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            android:onClick="onClickGallery"
            android:scaleType="fitXY"
            android:src="@drawable/ic_like" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="110dp"
            android:layout_height="150sp"
            android:layout_below="@+id/imageView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            android:onClick="onClickGallery"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_like" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="110dp"
            android:layout_height="150sp"
            android:layout_below="@+id/imageView2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            android:onClick="onClickGallery"
            android:scaleType="fitXY"
            android:src="@drawable/ic_like" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="110dp"
            android:layout_height="150sp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="80dp"
            android:layout_toEndOf="@+id/imageView"
            android:adjustViewBounds="true"
            android:onClick="onClickGallery"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_like" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="110dp"
            android:layout_height="150sp"
            android:layout_below="@+id/imageView4"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/imageView3"
            android:adjustViewBounds="true"
            android:onClick="onClickGallery"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_like" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView5"
            android:layout_marginStart="15dp"
            android:layout_marginTop="-143dp"
            android:layout_toEndOf="@+id/imageView5"
            android:onClick="zapis2"
            android:text="Zapisz" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView5"
            android:layout_marginStart="15dp"
            android:layout_marginTop="-68dp"
            android:layout_toEndOf="@+id/imageView5"
            android:onClick="plan"
            android:text="Plan" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="153dp"
            android:layout_height="182dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="70dp"
            android:layout_toEndOf="@+id/imageView4">

            <RadioButton
                android:id="@+id/pon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Poniedziałek" />

            <RadioButton
                android:id="@+id/wt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wtorek" />

            <RadioButton
                android:id="@+id/sr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Środa" />

            <RadioButton
                android:id="@+id/czw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Czwartek" />

            <RadioButton
                android:id="@+id/pt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/radioGroup"
                android:text="Piątek" />

        </RadioGroup>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="240dp"
            android:layout_marginTop="39dp"
            android:text="Wybierz dzień:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="2dp"
            android:text="Dół" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="46dp"
            android:layout_marginTop="2dp"
            android:text="Góra" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView4"
            android:layout_marginStart="45dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/imageView2"
            android:text="Buty" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="2dp"
            android:text="Głowa" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="60dp"
            android:layout_toEndOf="@+id/imageView"
            android:text="Dodatki" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button2"
            android:layout_marginStart="35dp"
            android:layout_marginTop="75dp"
            android:visibility="gone"
            android:layout_toEndOf="@+id/imageView3"
            android:onClick="previous"
            android:text="Poprzedni" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button2"
            android:layout_marginStart="10dp"
            android:layout_marginTop="75dp"
            android:visibility="gone"
            android:layout_toEndOf="@+id/button3"
            android:text="Następny"
            android:onClick="next"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="155dp"
            android:layout_marginTop="410dp"
            android:visibility="gone"
            android:text="Dzień"
            android:textSize="22dp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>